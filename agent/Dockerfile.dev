# Development Dockerfile with hot-reload
FROM python:3.11-slim

WORKDIR /app

RUN pip install uv

COPY pyproject.toml ./
RUN uv venv && uv pip install fastapi uvicorn pydantic watchfiles

COPY *.py ./

EXPOSE 10002 10004

# Run with hot-reload
CMD [".venv/bin/python", "-m", "uvicorn", "simple_agent:app", "--host", "0.0.0.0", "--port", "10002", "--reload"]
